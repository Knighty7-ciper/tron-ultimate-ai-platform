# TRON Ultimate AI Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# ================================
# CORE AI SERVICES
# ================================

# Gemini API Key (REQUIRED)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ================================
# DATABASE CONFIGURATION
# ================================

# Supabase Configuration (REQUIRED for data storage)
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# PostgreSQL Database URL (ALTERNATIVE to Supabase)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@localhost:5432/tron_ai_db

# ================================
# CACHING & SESSIONS
# ================================

# Redis Configuration (REQUIRED for caching and sessions)
# Format: redis://username:password@host:port/db
REDIS_URL=redis://localhost:6379/0

# ================================
# API CONFIGURATION
# ================================

# API Port (default: 8000)
API_PORT=8000

# API Host (default: 0.0.0.0)
API_HOST=0.0.0.0

# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ================================
# MONITORING & ANALYTICS
# ================================

# Prometheus Configuration
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090

# Grafana Configuration (Optional)
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# ================================
# SECURITY CONFIGURATION
# ================================

# JWT Secret Key (REQUIRED for authentication)
JWT_SECRET_KEY=your_jwt_secret_key_here

# Environment (development/production)
ENVIRONMENT=production

# ================================
# DEPLOYMENT CONFIGURATION
# ================================

# GitHub Repository (for automated deployment)
GITHUB_USERNAME=your_github_username
GITHUB_REPO_NAME=tron-ultimate-ai-platform

# Netlify Configuration (for frontend deployment)
NETLIFY_AUTH_TOKEN=your_netlify_auth_token
NETLIFY_SITE_ID=your_netlify_site_id

# ================================
# ADVANCED FEATURES
# ================================

# Browser Automation (Optional)
# Enable for web scraping and browser control features
ENABLE_BROWSER_AUTOMATION=false

# File Storage (Optional)
# AWS S3 or compatible storage for file uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# Email Configuration (Optional)
# For notifications and alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Debug Mode (set to false in production)
DEBUG=true

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable detailed request/response logging
ENABLE_REQUEST_LOGGING=true